{
  "openapi": "3.0.1",
  "info": {
    "title": "Investimentos API",
    "version": "v1"
  },
  "paths": {
    "/api/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Perfil/perfil-risco/{clienteId}": {
      "get": {
        "tags": [
          "Perfil"
        ],
        "summary": "Retorna o perfil de risco do cliente com base em dados financeiros simulados.",
        "parameters": [
          {
            "name": "clienteId",
            "in": "path",
            "description": "ID do cliente.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil encontrado com sucesso."
          }
        }
      }
    },
    "/api/Perfil/produtos-recomendados/{perfil}": {
      "get": {
        "tags": [
          "Perfil"
        ],
        "summary": "Retorna produtos recomendados com base no perfil informado.",
        "parameters": [
          {
            "name": "perfil",
            "in": "path",
            "description": "Perfil do cliente (Conservador, Moderado, Agressivo).",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produtos recomendados retornados com sucesso."
          }
        }
      }
    },
    "/api/Produto/produtos": {
      "get": {
        "tags": [
          "Produto"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Produto/produtos/{id}": {
      "get": {
        "tags": [
          "Produto"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Simulacao/simular-investimento": {
      "post": {
        "tags": [
          "Simulacao"
        ],
        "summary": "Realiza a simulação de um investimento com base nos parâmetros informados.",
        "requestBody": {
          "description": "Objeto contendo ClienteId, Valor, PrazoMeses e TipoProduto.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SimulacaoRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SimulacaoRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SimulacaoRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Simulação realizada com sucesso."
          },
          "400": {
            "description": "Dados inválidos para simulação."
          },
          "404": {
            "description": "Produto não encontrado."
          }
        }
      }
    },
    "/api/Simulacao/simulacoes": {
      "get": {
        "tags": [
          "Simulacao"
        ],
        "summary": "Retorna todas as simulações realizadas.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Simulacao/simulacoes/por-produto-dia": {
      "get": {
        "tags": [
          "Simulacao"
        ],
        "summary": "Retorna agregação de simulações por produto e dia.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Telemetria": {
      "get": {
        "tags": [
          "Telemetria"
        ],
        "summary": "Retorna dados de telemetria com volumes e tempos médios por serviço.",
        "parameters": [
          {
            "name": "inicio",
            "in": "query",
            "description": "Data inicial do período.",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "fim",
            "in": "query",
            "description": "Data final do período.",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SimulacaoRequest": {
        "type": "object",
        "properties": {
          "clienteId": {
            "type": "integer",
            "format": "int32"
          },
          "valor": {
            "type": "number",
            "format": "double"
          },
          "prazoMeses": {
            "type": "integer",
            "format": "int32"
          },
          "tipoProduto": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Insira apenas o token JWT (sem 'Bearer ')",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}